# ==============================================================================
# Koppling - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
# PostgreSQL connection string
# For local development: postgresql://user:password@localhost:5432/koppling
# For Vercel Postgres: Use the DATABASE_URL from Vercel dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/koppling"

# ------------------------------------------------------------------------------
# Next.js / Authentication
# ------------------------------------------------------------------------------
# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# NextAuth URL (your app URL)
NEXTAUTH_URL="http://localhost:3000"

# ------------------------------------------------------------------------------
# Encryption
# ------------------------------------------------------------------------------
# Encryption key for storing sensitive tokens (generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your-encryption-key-here"

# ------------------------------------------------------------------------------
# Stripe (Billing)
# ------------------------------------------------------------------------------
# Stripe secret key (from Stripe dashboard)
STRIPE_SECRET_KEY=""

# Stripe webhook secret (from Stripe webhook settings)
STRIPE_WEBHOOK_SECRET=""

# Stripe publishable key (for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ------------------------------------------------------------------------------
# Fortnox Integration (Platform-level)
# ------------------------------------------------------------------------------
# Fortnox OAuth app credentials (from Fortnox developer portal)
# NOTE: These are stored encrypted in platform_settings table by admin
# These are just for initial setup or backup
FORTNOX_CLIENT_ID=""
FORTNOX_CLIENT_SECRET=""
FORTNOX_REDIRECT_URL=""

# ------------------------------------------------------------------------------
# Shopify Integration (Platform-level)
# ------------------------------------------------------------------------------
# Shopify app credentials (from Shopify Partners dashboard)
# NOTE: Individual stores will have their own tokens
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""

# ------------------------------------------------------------------------------
# Email Service
# ------------------------------------------------------------------------------
# Email provider credentials (e.g., SendGrid, AWS SES, Resend)
EMAIL_FROM="noreply@koppling.se"
EMAIL_API_KEY=""

# For SendGrid:
# SENDGRID_API_KEY=""

# For Resend:
# RESEND_API_KEY=""

# ------------------------------------------------------------------------------
# Analytics
# ------------------------------------------------------------------------------
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA4_MEASUREMENT_ID=""

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
# Environment (development | production | test)
NODE_ENV="development"

# App URL (for generating links in emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ------------------------------------------------------------------------------
# Optional: Third-party Services
# ------------------------------------------------------------------------------
# Sentry (error tracking)
# SENTRY_DSN=""

# Logging service
# LOG_LEVEL="info"
